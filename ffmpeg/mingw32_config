#!/bin/bash

./configure \
--prefix=$PWD/output_mingw32 \
--disable-static \
--enable-shared \
--enable-small \
--disable-swscale-alpha \
--disable-ffmpeg \
--disable-ffplay \
--disable-ffprobe \
--disable-ffserver \
--disable-doc \
--disable-avdevice \
--disable-postproc \
--disable-avfilter \
--disable-swresample \
--disable-everything \
--cross-prefix=i586-mingw32msvc- \
--enable-cross-compile \
--target-os=mingw32 \
--arch=x86 \
--disable-symver \
--enable-memalign-hack \
--disable-debug \
--enable-decoder=aac    \
--enable-decoder=ac3    \
